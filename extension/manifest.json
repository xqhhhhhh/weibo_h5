{
  "manifest_version": 3,
  "name": "自动验证码助手",
  "version": "1.1",
  "description": "将易盾滑块图片URL发送给本地ddddocr后端识别并自动拖动",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://m.weibo.cn/*",
    "https://weibo.com/*",
    "https://www.weibo.com/*",
    "https://weibo.cn/*",
    "https://necaptcha.nosdn.127.net/*",
    "https://*.nosdn.127.net/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://m.weibo.cn/*",
        "https://weibo.com/*",
        "https://www.weibo.com/*",
        "https://weibo.cn/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png"
  }
}
